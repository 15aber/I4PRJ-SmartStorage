@model SmartStorage.BLL.Dtos.TransactionDto

@{
  ViewBag.Title = "Transactions";
}

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>@ViewBag.Title</h5>
        </div>
        <div class="ibox-content">
          @Html.ActionLink("Restock", "NewRestock", null, new { @class = "btn btn-primary btn-sm" })
          @Html.ActionLink("Transaction", "NewTransaction", null, new { @class = "btn btn-primary btn-sm" })
          
          <div id="datapickerStuff" style="float: right" class="datapickerLine">
            <div class="row">

              <div class="col-lg-2 pull-right">
                <input type="button" name="filter" id="filter" value="Filter" class="btn btn-primary " />
              </div>

              <div class="col-lg-2 pull-right">
                <div class="input-group">
                  <label class="input-group-addon" for="todate">to:</label>
                  <input class="form-control" id="todate" name="todate" type="text" size="8" value="@DateTime.Today.AddDays(1)" />
                  <span class="input-group-addon" id="toIcon"> <i class="fa fa-calendar" aria-hidden="true"></i></span>
                </div>
              </div>

              <div class="col-lg-2 pull-right">
                <div class="input-group" id="froms">
                  <label class="input-group-addon" for="fromdate">from:</label>
                  <input class="form-control" id="fromdate" name="fromdate" type="text" size="8" value="@DateTime.Today.AddMonths(-1).AddDays(1)" />
                  <span class="input-group-addon" id="fromIcon"> <i class="fa fa-calendar" aria-hidden="true"></i></span>
                </div>
              </div>

            </div>
          </div>

          <table id="transactions" class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
              <th>
                @Html.DisplayNameFor(model => model.ProductId)
              </th>
              <th>
                @Html.DisplayNameFor(model => model.FromInventoryId)
              </th>
              <th>
                @Html.DisplayNameFor(model => model.ToInventoryId)
              </th>
              <th>
                @Html.DisplayNameFor(model => model.Quantity)
              </th>
              <th>
                @Html.DisplayNameFor(model => model.Updated)
              </th>
              <th>
                @Html.DisplayNameFor(model => model.ByUser)
              </th>
            </tr>
            </thead>
            <tbody></tbody>
            <tfoot></tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

@section scripts {
  <script type="text/javascript" src="~/Scripts/site/datatables/transactionIndex.js"></script>
}