@model SmartStorage.BLL.ViewModels.TransactionViewModel

@{
  ViewBag.Title = "Transactions";
}

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>@ViewBag.Title</h5>
        </div>
        <div class="ibox-content">
          <div class="row">

            <div class="col-lg-6">
              @Html.ActionLink("Restock", "Add", null, new { @class = "btn btn-primary btn-sm" })
              @Html.ActionLink("Transaction", "Create", null, new { @class = "btn btn-primary btn-sm" })
            </div>

            <div class="col-lg-6">

              <div class="col-lg-5">
                <div class="input-group pull-right" id="froms">
                  <label class="input-group-addon" for="fromdate">from:</label>
                  <input class="form-control" id="fromdate" name="fromdate" type="text" value="@DateTime.Now.AddMonths(-1).ToShortDateString()" />
                  <span class="input-group-addon" id="fromIcon"> <i class="fa fa-calendar" aria-hidden="true"></i></span>
                </div>
              </div>

              <div class="col-lg-5">
                <div class="input-group pull-right">
                  <label class="input-group-addon" for="todate">to:</label>
                  <input class="form-control" id="todate" name="todate" type="text" value="@DateTime.Now.ToShortDateString()" />
                  <span class="input-group-addon" id="toIcon"> <i class="fa fa-calendar" aria-hidden="true"></i></span>
                </div>
              </div>

              <div class="col-lg-2">
                <div class="pull-right">
                  <input type="button" name="filter" id="filter" value="Filter" class="btn btn-primary pull-right" />
                </div>
              </div>
            </div>

          </div>
          <div class="row">
            <div class="col-lg-12">

              <table id="transactions" class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th>
                      @Html.DisplayNameFor(model => model.ProductId)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model.FromInventoryId)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model.ToInventoryId)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model.Quantity)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model.Updated)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model.ByUser)
                    </th>
                  </tr>
                </thead>
                <tbody></tbody>
                <tfoot></tfoot>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
@section scripts {
  <script type="text/javascript" src="~/Scripts/site/datatables/transactionIndex.js"></script>
}
