@model I4PRJ_SmartStorage.UI.ViewModels.Identity.VerifyPhoneNumberViewModel
@{
  ViewBag.Title = "Verify Phone Number";
  Layout = "~/Views/Shared/_LayoutFull.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
      <div class="ibox middle-box">
        <div class="ibox-title">
          <h5>@ViewBag.Title</h5>
        </div>
        <div class="ibox-content">
          @using (Html.BeginForm("VerifyPhoneNumber", "Manage"))
          {
            @Html.AntiForgeryToken()
            @Html.Hidden("phoneNumber", @Model.PhoneNumber)

            <div class="form-horizontal">
              @Html.ValidationSummary(true, "", new { @class = "text-danger" })
              <div class="form-group">
                @Html.LabelFor(model => model.Code, new {@class = "control-label col-md-3"})
                <div class="col-md-9">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></span>
                    @Html.TextBoxFor(model => model.Code, new {@class = "form-control"})
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                  <input type="submit" value="Verify phone" class="btn btn-primary"/>
                </div>
              </div>
            </div>
          }
        </div>
      </div>
    </div>
</div>

@section Scripts {
  @Scripts.Render("~/bundles/validate")
}