@model SmartStorage.UI.ViewModels.SupplierRapportModel
@{
  ViewBag.Title = "Rapport";
}

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Supplier Rapport</h5>
          <div class="ibox-tools">
          </div>
        </div>
        <div class="ibox-content">
          <div class="row">

            <div class="col-lg-6">
              @Html.DropDownListFor(s => s.Supplier.SupplierId, new SelectList(Model.Suppliers, "SupplierId", "Name"), "All suppliers", new { @class = "form-control", id = "Supplier_SupplierId" })
            </div>

            <div class="col-lg-6">

              <div class="col-lg-5">
                <div class="input-group pull-right" id="froms">
                  <label class="input-group-addon" for="fromdate">from:</label>
                  <input class="form-control" id="fromdate" name="fromdate" type="text" value="@DateTime.Now.AddDays(-30).ToShortDateString()" />
                  <span class="input-group-addon" id="fromIcon"> <i class="fa fa-calendar" aria-hidden="true"></i></span>
                </div>
              </div>

              <div class="col-lg-5">
                <div class="input-group pull-right">
                  <label class="input-group-addon" for="todate">to:</label>
                  <input class="form-control" id="todate" name="todate" type="text" value="@DateTime.Now.AddDays(+1).ToShortDateString()" />
                  <span class="input-group-addon" id="toIcon"> <i class="fa fa-calendar" aria-hidden="true"></i></span>
                </div>
              </div>

              <div class="col-lg-2">
                <div class="pull-right">
                  <input type="button" name="filter" id="filter" value="Filter" class="btn btn-primary pull-right" />
                </div>
              </div>
            </div>

          </div>


          <div class="row">

            <table class="table table-striped table-bordered table-hover" id="suppliers-table">
              <thead>
                <tr>
                  <th>
                    @Html.LabelFor(model => model.Transaction.TransactionId)
                  </th>
                  <th>
                    @Html.LabelFor(model => model.Transaction.Product.Name)
                  </th>
                  <th>
                    @Html.LabelFor(model => model.Transaction.Quantity)
                  </th>
                  <th>
                    @Html.LabelFor(model => model.Transaction.Updated)
                  </th>
                  <th>
                    @Html.LabelFor(model => model.Transaction.ByUser)
                  </th>
                </tr>
              </thead>
              <tbody></tbody>
              <tfoot></tfoot>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



@section Scripts {
  <script type="text/javascript" src="~/Scripts/site/datatables/supplierForm.js"></script>
}
