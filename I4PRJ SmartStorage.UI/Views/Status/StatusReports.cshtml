@model SmartStorage.BLL.ViewModels.StatusViewModel
@{
    ViewBag.Title = "StatusReports";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Statuses</h5>
                </div>
                <div class="ibox-content">

<table class="table table-striped table-bordered table-hover" id="datatable-table">
  <thead>  <tr>
        <th>
            @Html.DisplayNameFor(model => model.Status.Inventory.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status.Updated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status.ByUser)
        </th>
    
    </tr></thead>

@foreach (var item in Model.Statuses) {
 <tbody>   <tr>
  
        <td>
            <a href="@Url.Action("StatusReportDetails", "Status", new { id = item.StatusId})">@Html.DisplayFor(modelItem => item.Inventory.Name)</a>
</td>
        <td>
            @Html.DisplayFor(modelItem => item.Updated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ByUser)
        </td>
    </tr></tbody>
}

</table>

                </div>
            </div>
        </div>
    </div>
 </div>

 @section Styles {
    @Styles.Render("~/Content/datatables")
}

@section Scripts {
    @Scripts.Render("~/bundles/datatables")
}


