@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-top-links navbar-right">
        <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out"></i>Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-top-links navbar-right">
        <li><a href="@Url.Action("Register", "Account")" id="registerLink"><i class="fa fa-user-plus"></i>Register</a></li>
        <li><a href="@Url.Action("Login", "Account")" id="loginLink"><i class="fa fa-sign-in"></i>Log in</a></li>
    </ul>
}
