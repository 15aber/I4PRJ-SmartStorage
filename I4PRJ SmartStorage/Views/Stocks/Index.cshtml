@model IEnumerable<I4PRJ_SmartStorage.Models.Domain.Stock>

@{
	ViewBag.Title = "Stock";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins">
				<div class="ibox-title">
					<h5>Stock</h5>
				</div>
				<div class="ibox-content">

					<table class="table table-striped table-bordered table-hover" id="datatable-table">
						<thead>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.InventoryId)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.ProductId)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Quantity)
								</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										@Html.DisplayFor(modelItem => item.Inventory.Name)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Product.Name)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Quantity)
									</td>
								</tr>
							}
						</tbody>
					</table>

				</div>
			</div>
		</div>
	</div>
</div>

@section Styles {
	@Styles.Render("~/Content/datatables")
}

@section Scripts {
	@Scripts.Render("~/bundles/datatables")
}