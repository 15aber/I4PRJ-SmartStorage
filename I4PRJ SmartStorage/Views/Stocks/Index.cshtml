@model I4PRJ_SmartStorage.ViewModels.StockViewModel

@{
    ViewBag.Title = "Stock";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@Model.Inventory.Name</h5>
                </div>

                <div class="ibox-content">


                    <table class="table table-striped table-bordered table-hover" id="datatable-table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Stock.Product)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Stock.Quantity)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Stocks)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Product.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Quantity)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>