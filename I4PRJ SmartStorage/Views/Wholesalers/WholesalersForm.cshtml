@using I4PRJ_SmartStorage.ViewModel
@model I4PRJ_SmartStorage.ViewModel.WholesalerViewModel
@{
    ViewBag.Title = "Wholesalers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    
<h2>New wholesalers report</h2>

@using (Html.BeginForm("CreateNewReport", "Wholesalers"))
{
    <div class="form-group">
        @Html.LabelFor(w => w.Wholesaler.WholesalerId, "")
        @Html.DropDownListFor(w => w.Wholesaler.WholesalerId, new SelectList(Model.Wholesalers, "WholesalerId", "Name"), "Select wholesaler", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <p>Please select which timeperiode you would like to see the wholesaler sales</p>
    </div>
    <div class="form-group">
        <p>Select start date: <input id="from" type="text" size="16" value="Select date" /></p>    
    </div>
    <div class="form-group">
        <p>Select end date: <input id="to" type="text" size="16" value="Select date" /></p>
    </div>

    <table class="table table-striped table-bordered table-hover" id="datatable-table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model=>model.Wholesaler.WholesalerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction.TransactionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction.Updated)
            </th>
        </tr>
        </thead>
    </table>
}

@section Scripts
{
    @Scripts.Render("~/bundles/datatables")
    <script type="text/javascript" src="~/Scripts/site/datatables/wholesalerForm.js"></script>
}
