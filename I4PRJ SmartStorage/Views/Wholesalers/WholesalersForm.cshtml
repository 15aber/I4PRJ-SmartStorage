@model I4PRJ_SmartStorage.ViewModels.WholesalerViewModel
@{
    ViewBag.Title = "Wholesalers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    
<h2>New wholesalers report</h2>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="form-group">
                    @Html.LabelFor(w => w.Wholesaler.WholesalerId, "")
                    <div class="col-lg-4">
                        @Html.DropDownListFor(w => w.Wholesaler.WholesalerId, new SelectList(Model.Wholesalers, "WholesalerId", "Name"), "All wholesalers", new { @class = "form-control col-lg-4" })
                    </div>
                </div>
                <div class="ibox-title">
                    <h5>List of wholesaler sales</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary" })
                        <div class="ibox-content">
                            <table class="table table-striped table-bordered table-hover" id="wholesalers-table">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.LabelFor(model => model.Transaction.Product.Wholesaler.Name)
                                        </th>
                                        <th>
                                            @Html.LabelFor(model => model.Transaction.TransactionId, "Transaction Id")
                                        </th>
                                        <th>
                                            @Html.LabelFor(model => model.Transaction.ProductId)
                                        </th>
                                        <th>
                                            @Html.LabelFor(model => model.Transaction.Quantity)
                                        </th>
                                        <th>
                                            @Html.LabelFor(model => model.Transaction.Updated, "Transaction date")
                                        </th>
                                        <th>
                                            @Html.LabelFor(model => model.Transaction.ByUser, "Transaction done by")
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    <script type="text/javascript" src="~/Scripts/site/datatables/wholesalerForm.js"></script>
}
