@model IEnumerable<I4PRJ_SmartStorage.Models.Domain.Wholesaler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Wholesaler</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Create new wholesaler", "Create", null, new { @class = "btn btn-primary btn-xs" })
                    </div>
                    <div class="ibox-tools">
                        @Html.ActionLink("Create new wholesaler report", "CreateNewReport", null, new { @class = "btn btn-primary btn-xs" })
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover" id="datatable-table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Updated)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ByUser)
                                </th>
                                <th></th>

                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Updated)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ByUser)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Details", "Details", new { id = item.WholesalerId }, new { @class = "btn btn-primary btn-sm" })
                                        @Html.ActionLink("Edit", "Edit", new { id = item.WholesalerId }, new { @class = "btn btn-white btn-sm" })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.WholesalerId }, new { @class = "btn btn-white btn-sm" })
                                    </td>

                                </tr>
                            </tbody>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/datatables")
}

@section Scripts {
    @Scripts.Render("~/bundles/datatables")
}


