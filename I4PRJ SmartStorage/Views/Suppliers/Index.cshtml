@model IEnumerable<I4PRJ_SmartStorage.Models.Domain.Supplier>

@{
  ViewBag.Title = "Suppliers";
}

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>List of Suppliers</h5>
          <div class="ibox-tools">
          </div>
        </div>
        <div class="ibox-content">
          @Html.ActionLink("Create Supplier", "Create", null, new { @class = "btn btn-primary btn-sm" })
          @Html.ActionLink("Create Report", "CreateNewReport", null, new { @class = "btn btn-info btn-sm" })

          <table class="table table-striped table-bordered table-hover" id="datatable-table">
            <thead>
              <tr>
                <th>
                  @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                  @Html.DisplayNameFor(model => model.Updated)
                </th>
                <th>
                  @Html.DisplayNameFor(model => model.ByUser)
                </th>
                <th>Options</th>

              </tr>
            </thead>

            @foreach (var item in Model)
            {
              <tbody>
                <tr>

                  <td>
                    @Html.DisplayFor(modelItem => item.Name)
                  </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.Updated)
                  </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.ByUser)
                  </td>
                  <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.SupplierId }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.SupplierId }, new { @class = "btn btn-danger btn-sm" })
                  </td>

                </tr>
              </tbody>
            }

          </table>

        </div>
      </div>
    </div>
  </div>
</div>
