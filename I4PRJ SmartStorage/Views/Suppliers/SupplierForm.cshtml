@model I4PRJ_SmartStorage.ViewModels.SupplierViewModel
@{
  ViewBag.Title = "Repport";
}

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Supplier Repport</h5>
          <div class="ibox-tools">
          </div>
        </div>
        <div class="ibox-content">

              <div class="col-lg-3">
                @Html.DropDownListFor(s => s.Supplier.SupplierId, new SelectList(Model.Suppliers, "SupplierId", "Name"), "All suppliers", new { @class = "form-control pull-left" })
              </div>

          <table class="table table-striped table-bordered table-hover" id="suppliers-table">
            <thead>
            <tr>
              <th>
                @Html.LabelFor(model => model.Transaction.Product.Supplier.Name)
              </th>
              <th>
                @Html.LabelFor(model => model.Transaction.TransactionId, "Transaction Id")
              </th>
              <th>
                @Html.LabelFor(model => model.Transaction.ProductId)
              </th>
              <th>
                @Html.LabelFor(model => model.Transaction.Quantity)
              </th>
              <th>
                @Html.LabelFor(model => model.Transaction.Updated, "Transaction date")
              </th>
              <th>
                @Html.LabelFor(model => model.Transaction.ByUser, "Transaction done by")
              </th>
            </tr>
            </thead>
            <tbody></tbody>
            <tfoot></tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>



@section Scripts {
  <script type="text/javascript" src="~/Scripts/site/datatables/supplierForm.js"></script>
}
