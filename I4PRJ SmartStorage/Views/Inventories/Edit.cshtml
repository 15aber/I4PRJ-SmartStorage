@model I4PRJ_SmartStorage.ViewModels.InventoryViewModel

@{
  ViewBag.Title = "Edit Inventory";
}

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <div class="ibox">
        <div class="ibox-title">
          <h5>Edit Inventory</h5>
        </div>
        <div class="ibox-content">

          @using (Html.BeginForm())
          {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
              @Html.ValidationSummary(true)
              @Html.HiddenFor(model => model.Inventory.InventoryId)

              <div class="form-group">
                @Html.LabelFor(model => model.Inventory.Name, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                  @Html.EditorFor(model => model.Inventory.Name)
                  @Html.ValidationMessageFor(model => model.Inventory.Name)
                </div>
              </div>

              <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                  <input type="submit" value="Save" class="btn btn-primary" />
                  <a href="##" class="btn btn-warning" onclick="history.go(-1); return false;">Cancel</a>
                </div>
              </div>
            </div>
          }

        </div>
      </div>
    </div>
  </div>
</div>


@section Scripts {
  @Scripts.Render("~/bundles/validate")
}