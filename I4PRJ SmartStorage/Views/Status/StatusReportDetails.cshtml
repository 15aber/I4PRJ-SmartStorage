@model I4PRJ_SmartStorage.ViewModels.StatusViewModel
@{
    ViewBag.Title = "StatusReportDetails";
}

<form id="newStatus">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Status</h5>
                    </div>
                    <div class="ibox-content">
                        <table id="status" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Category</th>
                                    <th>Expected Quantity</th>
                                    <th>Current Quantity</th>
                                    <th>Difference</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            <tfoot></tfoot>
                        </table>
                        <div class="form-group ibox-tools">
                            @Html.ActionLink("Return To Report List", "StatusReports", null, new { @class = "btn btn-white" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script type="text/javascript" src="~/Scripts/site/datatables/statusReportDetails.js"></script>
}