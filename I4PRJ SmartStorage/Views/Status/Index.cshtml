@using System.Web.UI.WebControls
@model I4PRJ_SmartStorage.ViewModel.StatusViewModel

@{
    ViewBag.Title = "Index";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Index</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>Status</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Inventories</h5>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Inventories)
                            </th>
                            <th>
                                @Html.HiddenFor(m => m.ShowNotification)
                            </th>
                        </tr>

                        @foreach (var item in Model.Inventories)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @*Is inventory found in a Status where IsStarted == true?*@
                                    @if (Model.StatusStartedInventories.FindIndex(x => x == item.InventoryId) == -1)
                                    {
                                        @Html.ActionLink("Start", "StartStatus", new { id = item.InventoryId }, new { @class = "btn btn-primary pull-right" });
                                    }

                                    else
                                    {
                                        @Html.ActionLink("Finish", "FinishStatus", new { id = item.InventoryId }, new { @class = "btn btn-primary pull-right", @style = "background-color:Red" });
                                    }
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(document)
            .ready(function () {
                if ($("#ShowNotification").val() === "True")
                    toastr.success("Status successfully recorded.");
            });
    </script>
}