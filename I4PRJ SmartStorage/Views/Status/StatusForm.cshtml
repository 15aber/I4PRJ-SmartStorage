@model I4PRJ_SmartStorage.ViewModels.StatusViewModel
@{
    ViewBag.Title = "StatusForm";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Status</h5>
                </div>
                <div class="ibox-content">
                    <table id="products" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Category</th>
                                <th>Quantity</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#products").DataTable({
                ajax: {
                    url: "/api/products",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "category.name"
                    },
                    {
                        data: "updated"
                    }
                ]
            });

            $("#products").on("click", ".js-delete", function () {
                var button = $(this);
                if(confirm("Are you sure you want to delete this product?")){
                    $.ajax({
                        url: "/api/products/" + button.attr("data-product-productid"),
                        method: "DELETE",
                        success: function() {
                            table.row(button.parents("tr")).remove().draw();
                        }
                    });
                }
            });
        });
    </script>
}