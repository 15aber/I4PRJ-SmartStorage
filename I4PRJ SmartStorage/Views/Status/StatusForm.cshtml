@model I4PRJ_SmartStorage.ViewModels.StatusViewModel
@{
    ViewBag.Title = "StatusForm";
}

<form id="newStatus">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Status</h5>
                    </div>
                    <div class="ibox-content">
                        <table id="status" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Category</th>
                                    <th>Expected Quantity</th>
                                    <th>Current Quantity</th>
                                    <th>Difference</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            <tfoot></tfoot>
                        </table>
                        <div class="form-group ibox-tools">
                            <input class="btn btn-primary js-submit" type="button" value="Create" />
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-white" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @if (!Model.IsStarted)
    {
        <script type="text/javascript" src="~/Scripts/site/datatables/startStatus.js"></script>
    }
    else
    {
        <script type="text/javascript" src="~/Scripts/site/datatables/finishStatus.js"></script>
    }
}