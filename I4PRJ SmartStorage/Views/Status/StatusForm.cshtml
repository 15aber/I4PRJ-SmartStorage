@model I4PRJ_SmartStorage.ViewModels.StatusViewModel
@{
    ViewBag.Title = "StatusForm";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Status</h5>
                </div>
                <div class="ibox-content">
                    <table id="products" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Category</th>
                                <th>Quantity</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                        <tfoot>
                        </tfoot>
                    </table>
                    <div class="form-group ibox-tools">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-white" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(document)
            .ready(function () {
                var table = $("#products")
                    .DataTable({
                        "autoWidth": false,
                        ajax: {
                            url: "/api/products",
                            dataSrc: ""
                        },
                        "columnDefs": [
                        { "width": "33%", "targets": 0 }, { "width": "33%", "targets": 1 }, { "width": "33%", "targets": 2 }
                        ],
                        columns: [
                            {
                                data: "product.name"
                            },
                            {
                                data: "product.category.name"
                            },
                            {
                                data: "stock.quantity",
                                render: function (data) {
                                    return "<input type='text' size='50' class='form-control' id='quantity' value=" +
                                        data +
                                        " data-customer-id=" +
                                        data +
                                        " />";
                                }
                            }
                        ]
                    });
            });
    </script>
}