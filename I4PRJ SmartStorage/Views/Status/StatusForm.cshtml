@model I4PRJ_SmartStorage.ViewModels.StatusViewModel
@{
    ViewBag.Title = "StatusForm";
}

<form id="newStatus">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Status</h5>
                    </div>
                    <div class="ibox-content">
                        <table id="status" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Category</th>
                                    <th>Expected Quantity</th>
                                    <th>Current Quantity</th>
                                    <th>Difference</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            <tfoot>
                            </tfoot>
                        </table>
                        <div class="form-group ibox-tools">
                            <input type="submit" value="Create" onclick="location.href='@Url.Action("Save", "Status")'" class="btn btn-primary js-submit" />
                            @*@using (Html.BeginForm("Create", "Status"))
                            {
                                <input type="submit" value="Start", class="btn btn-primary"/>
                            }*@
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-white" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Site/statusForm.js"></script>
}