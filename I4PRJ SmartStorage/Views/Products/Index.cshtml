@model I4PRJ_SmartStorage.ViewModels.ProductViewModel

@{
    ViewBag.Title = "Index";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Products</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-xs" })
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="products" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Product.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Product.PurchasePrice)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Product.Updated)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Product.ByUser)
                                </th>
                                <th></th>
                        </thead>
                        <tbody></tbody>
                        <tfoot>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/Scripts/site/datatables/productsIndex.js"></script>
}