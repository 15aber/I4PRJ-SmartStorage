@model I4PRJ_SmartStorage.ViewModel.TransactionViewModel

@{
  ViewBag.Title = "Transaction";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <ol class="breadcrumb">
      <li>
        @Html.ActionLink("Transaction", "List")
      </li>
      <li class="active">
        <strong>New</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Create Transaction</h5>
        </div>
        <div class="ibox-content">

          @using (Html.BeginForm("Save", "Transactions"))
          {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
              @Html.ValidationSummary(true)

              <div class="form-group">
                @Html.LabelFor(model => model.Transaction.FromInventoryId, new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                  @Html.DropDownListFor(model => model.Transaction.FromInventoryId, new SelectList(Model.FromInventory, "InventoryId", "Name"), "", new { @class = "form-control" })
                  @Html.ValidationMessageFor(model => model.Transaction.FromInventoryId)
                </div>
              </div>

              <div class="form-group">
                @Html.LabelFor(model => model.Transaction.ToInventoryId, new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                  @Html.DropDownListFor(model => model.Transaction.ToInventoryId, new SelectList(Model.ToInventory, "InventoryId", "Name"), "", new { @class = "form-control" })
                  @Html.ValidationMessageFor(model => model.Transaction.ToInventoryId)
                </div>
              </div>

              <div class="form-group">
                @Html.LabelFor(model => model.Transaction.ProductId, new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                  @Html.DropDownListFor(model => model.Transaction.ProductId, new SelectList(Model.Product, "ProductId", "Name"), "", new { @class = "form-control" })
                  @Html.ValidationMessageFor(model => model.Transaction.ProductId)
                </div>
              </div>

              <div class="form-group">
                @Html.LabelFor(model => model.Transaction.Quantity, new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                  @Html.EditorFor(model => model.Transaction.Quantity)
                  @Html.ValidationMessageFor(model => model.Transaction.Quantity)
                </div>
              </div>
              <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                  <input type="submit" value="Save" class="btn btn-primary" />
                  @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-white" })
                </div>
              </div>
            </div>
          }

        </div>
      </div>
    </div>
  </div>
</div>


@section Scripts {
  @Scripts.Render("~/bundles/validate")
}