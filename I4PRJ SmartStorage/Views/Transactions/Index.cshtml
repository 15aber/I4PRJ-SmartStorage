@model I4PRJ_SmartStorage.ViewModels.TransactionViewModel

@{
    ViewBag.Title = "Transactions";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Transactions</h5>
                    <div class="ibox-tools">

                        <div style="padding-top: 30px" class="form-group">
                            @Html.ActionLink("Restock", "NewRestock", null, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Transaction", "NewTransaction", null, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                    <div class="ibox-content">
                        <label class="pull-right" for="datapickerStuff">Filter transactions: </label>
                        <div id="datapickerStuff" style="float: right" class="datapickerLine">
                            <div class="row">

                                <div class="col-lg-2 pull-right">
                                    <input type="button" name="filter" id="filter" value="Filter" class="btn btn-primary " />
                                </div>
                                
                                <div class="col-lg-2 pull-right">
                                    <div class="input-group">
                                        <label class="input-group-addon" for="todate">to:</label>
                                        <input class="form-control" id="todate" name="todate" type="text" size="8" value=""/>
                                        <span class="input-group-addon" id="toIcon"> <i class="fa fa-calendar" aria-hidden="true"></i></span>
                                    </div>
                                </div>
                                
                                <div class="col-lg-2 pull-right">
                                    <div class="input-group" id="froms">
                                        <label class="input-group-addon" for="fromdate">from:</label>
                                        <input class="form-control" id="fromdate" name="fromdate" type="text" size="8" value=""/>
                                        <span class="input-group-addon" id="fromIcon"> <i class="fa fa-calendar" aria-hidden="true"></i></span>

                                    </div>
                                </div>

                                
                            </div>
                        </div>

                        <table class="table table-striped table-bordered table-hover" id="transactions-table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Transaction.ProductId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Transaction.FromInventoryId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Transaction.ToInventoryId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Transaction.Quantity)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Transaction.Updated)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Transaction.ByUser)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @*@foreach(var item in Model.Transactions)
                                    {
                                      <tr>
                                        <td>
                                          @Html.DisplayFor(modelItem => item.Product.Name)
                                        </td>
                                        <td>
                                          @Html.DisplayFor(modelItem => item.FromInventory.Name)
                                        </td>
                                        <td>
                                          @Html.DisplayFor(modelItem => item.ToInventory.Name)
                                        </td>
                                        <td>
                                          @Html.DisplayFor(modelItem => item.Quantity)
                                        </td>
                                        <td>
                                          @Html.DisplayFor(modelItem => item.Updated)
                                        </td>
                                        <td>
                                          @Html.DisplayFor(modelItem => item.ByUser)
                                        </td>
                                      </tr>
                                    }*@
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script type="text/javascript" src="~/Scripts/site/datatables/transactionIndex.js"></script>
}