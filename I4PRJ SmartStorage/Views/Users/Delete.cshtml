@model I4PRJ_SmartStorage.Models.ApplicationUser

@{
  ViewBag.Title = "Delete User";
}


<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <div class="ibox">
        <div class="ibox-title">
          <h5>Are you sure you want to delete <strong class="text-danger">@Html.DisplayFor(model => model.FullName)</strong>?</h5>
        </div>
        <div class="ibox-content">
          @using (Html.BeginForm())
          {
            @Html.AntiForgeryToken()

            <div class="form-group pull-right">
                <input type="submit" value="Delete" class="btn btn-danger" /> 
                <a href="#" class="btn btn-primary btn-outline" onclick="history.go(-1); return false;">Cancel</a>
              </div>
              <div class="clearfix"></div>
          }
        </div>
      </div>
    </div>
  </div>
</div>
