@using Microsoft.AspNet.Identity
@model IEnumerable<I4PRJ_SmartStorage.Models.RegisterViewModel>

@{
    ViewBag.Title = "Users";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Users</h5>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover" id="datatable-table">
                        <thead>
                        <tr>
                            <th>
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Username)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FullName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PhoneNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>

                        </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tbody>
                            <tr>
                                <td>
                                    <img src="@Html.DisplayFor(modelItem => item.ProfilePicture)" class="img-rounded" width="40" height="40"/>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>

                            </tr>
                            </tbody>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>


